<Shw::Text::H1>KeyValueInputs</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::Body>
    This is a functional example of the KeyValueInputs component, meant to show how a consumer could implement the
    behavior.
  </Shw::Text::Body>

  <Hds::Form::KeyValueInputs @data={{this.functionalExampleData}}>
    <:header as |H|>
      <H.Legend>Tags applied to this workspace</H.Legend>
      <H.HelperText>
        Use tags to correlate, organize or filter your resources using key-only or key/value pairs. You can add up to 3
        tags per resource.
      </H.HelperText>
    </:header>

    <:row as |R|>
      {{#let (get this.functionalExampleErrors R.rowIndex) as |rowErrors|}}
        {{#let (get rowErrors "key") as |keyError|}}
          <R.Field @isRequired={{true}} @isInvalid={{(if (not-eq keyError undefined) true)}} as |F|>
            <F.Label>Key</F.Label>
            <F.HelperText>The key you enter should be a good key.</F.HelperText>
            <F.TextInput @value={{R.rowData.key.text}} {{on "blur" (fn this.onInputBlur R.rowData "key")}} />

            {{#if (not-eq keyError undefined)}}
              <F.Error>
                {{keyError}}
              </F.Error>
            {{/if}}
          </R.Field>
        {{/let}}

        {{#let (get rowErrors "value") as |valueError|}}
          <R.Field @isRequired={{true}} @isInvalid={{(if (not-eq valueError undefined) true)}} as |F|>
            <F.Label>Value</F.Label>
            <F.Textarea @value={{R.rowData.value.text}} {{on "blur" (fn this.onInputBlur R.rowData "value")}} />
            {{#if (not-eq valueError undefined)}}
              <F.Error>
                {{valueError}}
              </F.Error>
            {{/if}}
          </R.Field>
        {{/let}}
        <R.DeleteRowButton @onClick={{this.onDeleteRowClick}} />
      {{/let}}
    </:row>

    <:footer as |F|>
      {{#if (lt this.functionalExampleData.length 4)}}
        <F.AddRowButton @text="Add tag" @onClick={{this.onAddRowClick}} />
      {{else}}
        <F.Alert as |A|>
          <A.Description>
            You can only add up to 4 tags to this resource.
          </A.Description>
        </F.Alert>
      {{/if}}
    </:footer>
  </Hds::Form::KeyValueInputs>

