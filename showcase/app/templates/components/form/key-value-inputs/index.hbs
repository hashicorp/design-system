  <Shw::Text::H3>Key input selection changes value input type</Shw::Text::H3>

  <Hds::Form::KeyValueInputs @data={{this.dynamicInputExampleData}}>
    <:header as |H|>
      <H.Legend>Sample label</H.Legend>
    </:header>

    <:row as |R|>
      <R.Field as |F|>
        <F.Label>Key</F.Label>
        <F.Select {{on "change" (fn this.onDynamicInputChange R.rowData)}}>
          <option selected={{if (eq R.rowData.key "tag") true}}>Tag</option>
          <option selected={{if (eq R.rowData.key "other") true}}>Other</option>
        </F.Select>
      </R.Field>

      <R.Field as |F|>
        <F.Label>Value</F.Label>
        {{#if (eq R.rowData.key "tag")}}
          <F.SuperSelectSingle
            @onChange={{fn (mut @model.SELECTED_OPTION)}}
            @options={{@model.OPTIONS}}
            @selected={{@model.SELECTED_OPTION}}
            @ariaLabel="Label"
            as |option|
          >
            {{option}}
          </F.SuperSelectSingle>
        {{else if (eq R.rowData.key "other")}}
          <F.Textarea @value={{R.rowData.value.text}} />
        {{/if}}
      </R.Field>
      <R.DeleteRowButton @onClick={{this.onDynamicExampleDeleteRowClick}} />
    </:row>

    <:footer as |F|>
      <F.AddRowButton @text="Add tag" @onClick={{this.onDynamicExampleAddRowClick}} />
    </:footer>
  </Hds::Form::KeyValueInputs>

