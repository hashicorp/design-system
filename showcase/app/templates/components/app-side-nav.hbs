  <Shw::Text::H4>States</Shw::Text::H4>

  <Shw::Flex as |SF|>
    {{#let (array "default" "hover" "active" "focus") as |states|}}
      {{#each states as |state|}}
        <SF.Item @label={{state}}>
          <div class="shw-component-sim-toggle-button">
            <Hds::AppSideNav::ToggleButton aria-label="Close menu" @icon="chevrons-left" mock-state-value={{state}} />
          </div>
        </SF.Item>
      {{/each}}
    {{/let}}
  </Shw::Flex>
</section>