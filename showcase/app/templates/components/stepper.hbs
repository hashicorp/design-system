{{page-title "Stepper Component"}}

<Shw::Text::H1>Stepper</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Navigation</Shw::Text::H2>

  <Shw::Text::Body>Interactive</Shw::Text::Body>

  <Hds::Stepper::Navigation
    @titleTag="h3"
    @currentStep={{this.currentStepDemo1}}
    @onStepChange={{this.updateCurrentStepDemo1}}
    as |S|
  >
    <S.Step @isComplete={{true}} @isInteractive={{true}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{true}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{false}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Panel>
      <Shw::Placeholder @text="Step 1: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 2: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 3: Generic content" @height="100" />
    </S.Panel>
  </Hds::Stepper::Navigation>

  <Shw::Text::Body>Non-interactive</Shw::Text::Body>

  <Hds::Stepper::Navigation @titleTag="h3" @currentStep={{1}} as |S|>
    <S.Step @isComplete={{true}} @isInteractive={{false}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{false}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{false}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Panel>
      <Shw::Placeholder @text="Step 1: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 2: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 3: Generic content" @height="100" />
    </S.Panel>
  </Hds::Stepper::Navigation>

  <Shw::Divider />

  <Shw::Text::H2>List</Shw::Text::H2>

  <Hds::Stepper::List @titleTag="h3" {{style width="200px"}} as |S|>
    <S.Step @status="complete">
      <:title>Title</:title>
      <:description>Description</:description>
      <:content>
        <Shw::Placeholder @text="Step 1: Generic content" @height="20" />
      </:content>
    </S.Step>
    <S.Step @status="progress">
      <:title>Title</:title>
      <:description>Description</:description>
      <:content>
        <Shw::Placeholder @text="Step 2: Generic content" @height="20" />
      </:content>
    </S.Step>
    <S.Step @status="incomplete">
      <:title>Title</:title>
    </S.Step>
  </Hds::Stepper::List>

  <Shw::Divider />

  <Shw::Text::H2>Base elements</Shw::Text::H2>

  <Shw::Text::H3>Navigation::Step</Shw::Text::H3>

  <Shw::Text::H4>Default</Shw::Text::H4>

  <Shw::Grid @columns={{3}} as |SG|>
    <SG.Item @label="Incomplete">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step @isComplete={{false}} @stepNumber={{1}}>
          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
    <SG.Item @label="Active">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step
          @isComplete={{false}}
          @stepNumber={{1}}
          class="hds-stepper-navigation__step-active"
        >
          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
    <SG.Item @label="Complete">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step @isComplete={{true}} @stepNumber={{1}}>
          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
  </Shw::Grid>

  <Shw::Text::H4>Interactive</Shw::Text::H4>

