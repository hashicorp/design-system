          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
  </Shw::Grid>

  <Shw::Grid @columns={{3}} as |SG|>
    <SG.Item @label="Complete - Default">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step @isComplete={{true}} @stepNumber={{1}} @isInteractive={{true}}>
          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
    <SG.Item @label="Complete - Hover">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step
