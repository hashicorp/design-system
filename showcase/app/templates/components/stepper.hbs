  <Shw::Grid @columns={{3}} as |SG|>
    <SG.Item @label="Incomplete - Default">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step @isComplete={{false}} @stepNumber={{1}} @isInteractive={{true}}>
          <:title>Title</:title>
          <:description>Description</:description>
        </Hds::Stepper::Navigation::Step>
      </ul>
    </SG.Item>
    <SG.Item @label="Incomplete - Hover">
      <ul class="shw-component-stepper-sample-ul-wrapper">
        <Hds::Stepper::Navigation::Step
