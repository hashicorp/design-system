  <Shw::Text::H3>Navigation::Panel</Shw::Text::H3>

  <Hds::Stepper::Navigation::Panel>
    <Shw::Placeholder @text="Generic content" @height="100" />
  </Hds::Stepper::Navigation::Panel>

  <Shw::Text::H3>List::Step</Shw::Text::H3>

  <Shw::Text::H4>Status</Shw::Text::H4>

  <Shw::Grid @columns={{4}} as |SG|>
    {{#each @model.STEP_STATUSES as |status|}}
      <SG.Item @label="{{capitalize status}}">
        <ul class="shw-component-stepper-sample-ul-wrapper">
          <Hds::Stepper::List::Step @status={{status}} @stepNumber={{1}}>
            <:title>Title</:title>
            <:description>Description</:description>
            <:content>
              <Shw::Placeholder @text="Generic content" @height="20" />
            </:content>
          </Hds::Stepper::List::Step>
        </ul>
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Text::H3>Step::Indicator</Shw::Text::H3>

  <Shw::Text::H4>Default</Shw::Text::H4>

  <Shw::Grid @columns={{6}} as |SG|>
    {{#each @model.STEP_STATUSES as |status|}}
      <SG.Item @label={{capitalize status}}>
        <Hds::Stepper::Step::Indicator @status={{status}} @text="1" />
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Text::H4>Interactive</Shw::Text::H4>

  <Shw::Grid @columns={{6}} as |SG|>
    {{#each @model.STEP_STATUSES as |status|}}
      {{#each @model.STATES as |state|}}
        <SG.Item @label="{{capitalize status}}/{{state}}">
          <Hds::Stepper::Step::Indicator
            @status={{status}}
            @text="1"
            @isInteractive={{true}}
            mock-state-value={{state}}
          />
        </SG.Item>
      {{/each}}
      <SG.Item />
      <SG.Item />
      <SG.Item />
    {{/each}}
  </Shw::Grid>

  <Shw::Text::H3>Task::Indicator</Shw::Text::H3>

  <Shw::Text::H4>Default</Shw::Text::H4>

  <Shw::Grid @columns={{6}} as |SG|>
    {{#each @model.TASK_STATUSES as |status|}}
      <SG.Item @label={{capitalize status}}>
        <Hds::Stepper::Task::Indicator @status={{status}} @text="1" />
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Text::H4>Interactive</Shw::Text::H4>

  <Shw::Grid @columns={{6}} as |SG|>
    {{#each @model.TASK_STATUSES as |status|}}
      {{#each @model.STATES as |state|}}
        <SG.Item @label="{{capitalize status}}/{{state}}">
          <Hds::Stepper::Task::Indicator @status={{status}} @isInteractive={{true}} mock-state-value={{state}} />
        </SG.Item>
      {{/each}}
      <SG.Item />
      <SG.Item />
      <SG.Item />
    {{/each}}
  </Shw::Grid>

  <Shw::Divider />

  <Shw::Text::H2>Examples of navigation implementation</Shw::Text::H2>

  <Shw::Text::H3>Using contextual components</Shw::Text::H3>

  <Hds::Stepper::Navigation
    @titleTag="h3"
    @currentStep={{this.currentStepDemo2}}
    @onStepChange={{this.updateCurrentStepDemo2}}
    as |S|
  >
    <S.Step @isComplete={{true}} @isInteractive={{true}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{true}}>
      <:title>Title</:title>
      <:description>Description</:description>
    </S.Step>
    <S.Step @isComplete={{false}} @isInteractive={{false}}>
      <:title>Title</:title>
    </S.Step>
    <S.Panel>
      <Shw::Placeholder @text="Step 1: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 2: Generic content" @height="100" />
    </S.Panel>
    <S.Panel>
      <Shw::Placeholder @text="Step 3: Generic content" @height="100" />
    </S.Panel>
  </Hds::Stepper::Navigation>

  <Shw::Text::H3>Using @steps array</Shw::Text::H3>

  <Hds::Stepper::Navigation
    @steps={{array
      (hash title="Title" description="Description" isComplete=true isInteractive=true)
      (hash title="Title" description="Description" isComplete=false isInteractive=true)
      (hash title="Title" isComplete=false isInteractive=false)
    }}
    @titleTag="h3"
    @currentStep={{this.currentStepDemo3}}
    @onStepChange={{this.updateCurrentStepDemo3}}
  >
    <:body>
      {{#if (eq this.currentStepDemo3 0)}}
        <Shw::Placeholder @text="Step 1: Generic content" @height="100" />
      {{else if (eq this.currentStepDemo3 1)}}
        <Shw::Placeholder @text="Step 2: Generic content" @height="100" />
      {{else}}
        <Shw::Placeholder @text="Step 3: Generic content" @height="100" />
      {{/if}}
    </:body>
  </Hds::Stepper::Navigation>
