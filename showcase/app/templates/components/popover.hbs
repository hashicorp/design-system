{{page-title "Popover Component"}}

<Shw::Text::H1>Popover</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Popover</Shw::Text::H2>

  <Shw::Text::H3>Non-interactive content</Shw::Text::H3>

  <Shw::Flex {{style gap="2rem"}} as |SF|>

    <SF.Item @label="Plain text">
      <Hds::Popover>
        <:toggle>Lorem ipsum dolor</:toggle>
        <:content>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:content>
      </Hds::Popover>
    </SF.Item>

    <SF.Item @label="Icon">
      <Hds::Popover>
        <:toggle>
          <FlightIcon @name="info" />
        </:toggle>
        <:content>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:content>
      </Hds::Popover>
    </SF.Item>

    <SF.Item @label="Generic content">
      <Hds::Popover>
        <:toggle>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:toggle>
        <:content>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:content>
      </Hds::Popover>
    </SF.Item>

  </Shw::Flex>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Interactive content</Shw::Text::H3>

  <Shw::Flex {{style gap="2rem"}} as |SF|>

    <SF.Item @label="Applied to a button">
      <Hds::Popover @isInteractive={{true}}>
        <:toggle>
          <Hds::Button @text="Submit" />
        </:toggle>
        <:content>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:content>
      </Hds::Popover>
    </SF.Item>

    <SF.Item @label="Applied to a link">
      <Hds::Popover @isInteractive={{true}}>
        <:toggle>
          <Hds::Link::Standalone @icon="external-link" @iconPosition="trailing" @text="Acme Corp" @href="#" />
        </:toggle>
        <:content>
          <Shw::Placeholder @text="generic content" @height="40" />
        </:content>
      </Hds::Popover>
    </SF.Item>

    <SF.Item @label="Applied to an input">
      <Hds::Form::Field @layout="vertical" as |F|>
        <F.Label @controlId="tooltip-example-control-id">First Name</F.Label>
        <F.Control>
          <Hds::Popover @isInteractive={{true}}>
            <:toggle>
              <input type="text" value="Jane" id="tooltip-example-control-id" />
            </:toggle>
            <:content>
              <Shw::Placeholder @text="generic content" @height="40" />
            </:content>
          </Hds::Popover>
        </F.Control>
      </Hds::Form::Field>
    </SF.Item>
  </Shw::Flex>

</section>