      <Shw::Flex @label="{{capitalize size}}" as |SF|>
        <SF.Item>
          <Hds::RichTooltip as |RT|>
            <RT.ToggleInfoText @size={{size}}>Lorem ipsum dolor</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="40" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
        </SF.Item>
        <SF.Item>
          <Hds::RichTooltip as |RT|>
            <RT.ToggleInfoText @size={{size}} @icon="info" @iconPosition="leading">Lorem ipsum dolor</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="40" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
        </SF.Item>
        <SF.Item>
