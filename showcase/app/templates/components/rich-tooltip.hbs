{{page-title "RichTooltip Component"}}

<Shw::Text::H1>RichTooltip</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Toggle</Shw::Text::H2>

  <Shw::Text::H3>InfoText</Shw::Text::H3>

  <Shw::Text::H4>Content</Shw::Text::H4>

  <Shw::Flex as |SF|>
    <SF.Item @label="Only text">
      <Hds::RichTooltip as |RT|>
        <RT.ToggleInfoText>Lorem ipsum dolor</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="40" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
    <SF.Item @label="Text + leading icon">
      <Hds::RichTooltip as |RT|>
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum dolor</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="40" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
    <SF.Item @label="Text + trailing icon">
      <Hds::RichTooltip as |RT|>
        <RT.ToggleInfoText @icon="info" @iconPosition="trailing">Lorem ipsum dolor</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="40" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
  </Shw::Flex>

  <Shw::Text::H4>Sizes</Shw::Text::H4>

  <Shw::Flex as |SF|>
    <SF.Item @label="Inherited (default)">
      {{#let (array "14px" "16px" "18px") as |sizes|}}
        {{#each sizes as |size|}}
          <div {{style font-size=size}}>
            Lorem
            <Hds::RichTooltip @isInline={{true}} as |RT|>
              <RT.ToggleInfoText @icon="info" @iconPosition="leading">ipsum dolor</RT.ToggleInfoText>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
            sit amet
