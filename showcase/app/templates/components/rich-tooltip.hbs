        @placement="bottom-start"
        @isOpen={{true}}
        @enableCollisionDetection={{false}}
        @enableClickEvents={{true}}
        as |RT|
      >
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder
