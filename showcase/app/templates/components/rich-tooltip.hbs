      </Hds::Text::Body>
    </SF.Item>
  </Shw::Flex>

  <Shw::Flex as |SF|>
    <SF.Item @label="Block within other text" {{style width="250px"}}>
      <Hds::Text::Body @size="200" @tag="p">
