                {{/if}}
                {{#if (eq toggle "button")}}
                  <Hds::Button @text="Lorem ipsum" @icon="wand" {{on "click" this.onClickButton}} />
                {{/if}}
              </RT.ToggleGeneric>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
          </SG.Item>
        {{/each}}
      </Shw::Grid>
    {{/each}}
  {{/let}}

