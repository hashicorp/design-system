  {{/let}}

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Generic</Shw::Text::H3>

  <Hds::RichTooltip as |RT|>

    <RT.ToggleGeneric>
      <Shw::Outliner>Lorem ipsum</Shw::Outliner>
    </RT.ToggleGeneric>
    <RT.PopoverContent>
      <Shw::Placeholder @text="generic content" @height="40" />
    </RT.PopoverContent>
  </Hds::RichTooltip>

  <Shw::Divider />

  <Shw::Text::H2>Options</Shw::Text::H2>

  <Shw::Text::H3>Placement</Shw::Text::H3>
  <Shw::Grid class="shw-component-rich-tooltip-placement-grid" @columns={{5}} as |SG|>
    {{#each @model.PLACEMENTS as |place|}}
      <SG.Item class="shw-component-rich-tooltip-placement-grid__item--{{place}}">
        <div class="shw-component-rich-tooltip-placement-grid__target">
          <Hds::RichTooltip
            @placement={{place}}
            @isOpen={{true}}
            @enableCollisionDetection={{false}}
            @enableClickEvents={{true}}
            @toggleAriaLabel="more info"
            as |RT|
          >
            <RT.ToggleInfoText @icon="info" @iconPosition="leading" @size="large" />
            <RT.PopoverContent>
              <Shw::Placeholder @text={{place}} @height="30" @width="80" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
        </div>
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Offset</Shw::Text::H3>

  <Shw::Flex {{style gap="5rem" margin-bottom="10rem"}} as |SF|>
    <SF.Item @label="Offset: 12 (default)">
      <Hds::RichTooltip @isOpen={{true}} @enableCollisionDetection={{false}} @enableClickEvents={{true}} as |RT|>
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="30" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
    <SF.Item @label="Offset: { mainAxis: 30, crossAxis: 0 }">
      <Hds::RichTooltip
        @offset={{(hash mainAxis=30 crossAxis=0)}}
        @isOpen={{true}}
        @enableCollisionDetection={{false}}
        @enableClickEvents={{true}}
        as |RT|
      >
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="30" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
    <SF.Item @label="Offset: { mainAxis: 12, crossAxis: 80 }">
      <Hds::RichTooltip
        @offset={{(hash mainAxis=12 crossAxis=80)}}
        @isOpen={{true}}
        @enableCollisionDetection={{false}}
        @enableClickEvents={{true}}
        as |RT|
      >
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder @text="generic content" @height="30" />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SF.Item>
  </Shw::Flex>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Display</Shw::Text::H3>

  <Shw::Flex as |SF|>
    {{#let (array false true) as |booleans|}}
      {{#each booleans as |isInline|}}
        <SF.Item @label={{if isInline "Inline" "Block (default)"}}>
          <Hds::Text::Body @size="200" @tag="p">
            Lorem
            <Hds::RichTooltip @isInline={{isInline}} as |RT|>
              <RT.ToggleInfoText @icon="info" @iconPosition="leading">ipsum dolor</RT.ToggleInfoText>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
            sit amet
            <Hds::RichTooltip @isInline={{isInline}} as |RT|>
              <RT.ToggleInfoText @icon="info" @iconPosition="trailing">consectetur adipiscing</RT.ToggleInfoText>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
            elit.
          </Hds::Text::Body>
        </SF.Item>
      {{/each}}
    {{/let}}
  </Shw::Flex>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Width</Shw::Text::H3>

