              <RT.ToggleInfoText @icon="info" @iconPosition="trailing">consectetur adipiscing</RT.ToggleInfoText>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
            elit.
          </div>
        {{/each}}
      {{/let}}
