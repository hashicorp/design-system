        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder
            @text="Lorem ipsum dolor sit amet consectetur adipisicing elit."
            {{style padding="12px 16px"}}
          />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SG.Item>
  </Shw::Grid>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Height</Shw::Text::H3>

  <Shw::Grid @columns={{2}} {{style padding-bottom="10rem"}} as |SG|>
    <SG.Item @label="Default (height=fit-content/max-height=none)">
      <Hds::RichTooltip
        @placement="bottom-start"
        @isOpen={{true}}
        @enableCollisionDetection={{false}}
        @enableClickEvents={{true}}
        as |RT|
      >
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder
            @text="Lorem ipsum dolor sit amet consectetur adipisicing elit."
            {{style padding="12px 16px"}}
          />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SG.Item>
    <SG.Item @label="Custom fixed height (height=150px)">
      <Hds::RichTooltip
        @placement="bottom-start"
        @isOpen={{true}}
        @enableCollisionDetection={{false}}
        @enableClickEvents={{true}}
        @popoverHeight="150px"
        as |RT|
      >
        <RT.ToggleInfoText @icon="info" @iconPosition="leading">Lorem ipsum</RT.ToggleInfoText>
        <RT.PopoverContent>
          <Shw::Placeholder
            @text="Lorem ipsum dolor sit amet consectetur adipisicing elit."
            {{style padding="12px 16px"}}
          />
        </RT.PopoverContent>
      </Hds::RichTooltip>
    </SG.Item>
  </Shw::Grid>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Collision detection</Shw::Text::H3>

  <Shw::Text::Body>Scroll within the boxes to see the collision detection in action</Shw::Text::Body>

  <Shw::Grid @columns={{4}} {{style gap="2rem" margin-bottom="6rem"}} as |SF|>
    {{#let (array false true) as |detections|}}
      {{#each detections as |detection|}}
        <SF.Item @forceMinWidth={{true}} @label={{concat "enableCollisionDetection=" detection}}>
          <Shw::Autoscrollable @verticalShift={{30}}>
            <div class="shw-component-rich-tooltip-collision-detection-wrapper">
              <Hds::RichTooltip
                @isOpen={{true}}
                @enableCollisionDetection={{detection}}
                @enableClickEvents={{true}}
                as |RT|
              >
                <RT.ToggleInfoText @icon="info" @iconPosition="leading" @size="medium">Lorem ipsum</RT.ToggleInfoText>
                <RT.PopoverContent>
                  <Shw::Placeholder @text="generic content" @height="30" />
                </RT.PopoverContent>
              </Hds::RichTooltip>
            </div>
          </Shw::Autoscrollable>
        </SF.Item>
      {{/each}}
    {{/let}}
    <SF.Item />
    <SF.Item />
    {{#let (array "flip" "shift" "auto") as |detections|}}
      {{#each detections as |detection|}}
        <SF.Item @forceMinWidth={{true}} @label={{concat "enableCollisionDetection=" detection}}>
          <Shw::Autoscrollable @verticalShift={{30}}>
            <div class="shw-component-rich-tooltip-collision-detection-wrapper">
              <Hds::RichTooltip
                @isOpen={{true}}
                @enableCollisionDetection={{detection}}
                @enableClickEvents={{true}}
                as |RT|
              >
                <RT.ToggleInfoText @icon="info" @iconPosition="leading" @size="medium">Lorem ipsum</RT.ToggleInfoText>
                <RT.PopoverContent>
                  <Shw::Placeholder @text="generic content" @height="30" />
                </RT.PopoverContent>
              </Hds::RichTooltip>
            </div>
          </Shw::Autoscrollable>
        </SF.Item>
      {{/each}}
    {{/let}}
    <SF.Item />
  </Shw::Grid>

  <Shw::Divider />

  <Shw::Text::H2>Interaction states</Shw::Text::H2>

  <Shw::Text::H3>InfoText toggle</Shw::Text::H3>

  <Shw::Text::H4>Block</Shw::Text::H4>

  <Shw::Grid @columns={{4}} as |SG|>
    {{#each @model.STATES as |state|}}
      <SG.Item @label="{{capitalize state}}" class="shw-component-link-inline-state-samples">
        <Hds::RichTooltip @isInline={{false}} mock-state-value={{state}} mock-state-selector="button" as |RT|>
          <RT.ToggleInfoText @size="medium" @icon="info" @iconPosition="trailing">Lorem ipsum dolor</RT.ToggleInfoText>
          <RT.PopoverContent>
            <Shw::Placeholder @text="generic content" @height="30" />
          </RT.PopoverContent>
        </Hds::RichTooltip>
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Text::H4>Inline</Shw::Text::H4>

  <Shw::Grid @columns={{4}} as |SG|>
    {{#each @model.STATES as |state|}}
      <SG.Item @label="{{capitalize state}}" class="shw-component-link-inline-state-samples">
        <Hds::Text::Body @size="200" @tag="p" {{style margin-bottom="16px"}}>
          Lorem
          <Hds::RichTooltip @isInline={{true}} mock-state-value={{state}} mock-state-selector="button" as |RT|>
            <RT.ToggleInfoText @icon="info" @iconPosition="trailing">ipsum dolor</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="30" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
          sit amet
        </Hds::Text::Body>
        <Hds::Text::Body @size="200" @tag="p" {{style margin-bottom="16px"}}>
          Lorem ipsum dolor sit
          <Hds::RichTooltip @isInline={{true}} mock-state-value={{state}} mock-state-selector="button" as |RT|>
            <RT.ToggleInfoText @icon="info" @iconPosition="trailing">amet consectetur</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="30" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
          adipisicing elit
        </Hds::Text::Body>
        <Hds::Text::Body @size="200" @tag="p">
          Lorem ipsum
          <Hds::RichTooltip @isInline={{true}} mock-state-value={{state}} mock-state-selector="button" as |RT|>
            <RT.ToggleInfoText @icon="info" @iconPosition="trailing">dolor sit amet consectetur adipisicing elit</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="30" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
        </Hds::Text::Body>
      </SG.Item>
    {{/each}}
  </Shw::Grid>

  <Shw::Divider @level={{2}} />

  <Shw::Text::H3>Generic toggle</Shw::Text::H3>

  <Shw::Text::H4>With non-interactive content</Shw::Text::H4>

  <Shw::Text::Body>
    In this case the "toggle" wrapper is a
    <code>&lt;button&gt;</code>
    and it doesn't have special styles of its own other than for the "focus" state.
  </Shw::Text::Body>

  {{#let (array "icon" "badge" "tag") as |toggles|}}
    {{#each toggles as |toggle|}}
      <Shw::Grid @columns={{4}} as |SG|>
        {{#each @model.STATES as |state|}}
          <SG.Item @label={{state}}>
            <Hds::RichTooltip
              @toggleAriaLabel={{if (eq toggle "icon") "Information"}}
              mock-state-value={{state}}
              mock-state-selector="button"
              as |RT|
            >
              <RT.ToggleGeneric>
                {{#if (eq toggle "icon")}}
                  <FlightIcon @name="info" @isInlineBlock={{false}} />
                {{/if}}
                {{#if (eq toggle "badge")}}
                  <Hds::Badge @text="Lorem ipsum" @color="neutral" @icon="hexagon" type="outlined" />
                {{/if}}
                {{#if (eq toggle "tag")}}
                  <Hds::Tag @text="Lorem ipsum" />
                {{/if}}
              </RT.ToggleGeneric>
              <RT.PopoverContent>
                <Shw::Placeholder @text="generic content" @height="40" />
              </RT.PopoverContent>
            </Hds::RichTooltip>
          </SG.Item>
        {{/each}}
      </Shw::Grid>
    {{/each}}
  {{/let}}

  <Shw::Text::H4>With interactive content</Shw::Text::H4>

  <Shw::Text::Body>
    In this case the "toggle" wrapper is a simple
    <code>&lt;div&gt;</code>
    and it doesn't have any interaction states (the visual treatment of the inteactive states is the one of the
    contained interactive element)
  </Shw::Text::Body>

  {{#let (array "link" "button") as |toggles|}}
    {{#each toggles as |toggle|}}
      <Shw::Grid @columns={{4}} as |SG|>
        {{#each @model.STATES as |state|}}
          <SG.Item @label={{state}}>
            <Hds::RichTooltip
              mock-state-value={{state}}
              mock-state-selector={{if (eq toggle "link") "a" "button"}}
              as |RT|
            >
              <RT.ToggleGeneric>
                {{#if (eq toggle "link")}}
