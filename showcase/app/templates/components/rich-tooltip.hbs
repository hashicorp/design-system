            <RT.ToggleInfoText @size={{size}} @icon="info" @iconPosition="trailing">Lorem ipsum dolor</RT.ToggleInfoText>
            <RT.PopoverContent>
              <Shw::Placeholder @text="generic content" @height="40" />
            </RT.PopoverContent>
          </Hds::RichTooltip>
