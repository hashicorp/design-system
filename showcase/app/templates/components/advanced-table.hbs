  <Hds::AdvancedTable
    @model={{this.clustersWithExtraData}}
    @columns={{array
      (hash label="Peer name" isSortable=true key="peer-name")
      (hash label="Cluster partition")
      (hash label="Status" isSortable=true key="status-sort-order")
      (hash label="Imported services")
