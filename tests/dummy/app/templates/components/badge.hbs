    <div class="dummy-grid">
        {{#each @model.SIZES as |size|}}
            {{#each @model.TYPES as |type|}}
                {{!-- TODO! TEMPORARY --}}
                <div class="dummy-grid-card">
                    
                    <code>{{concat type " / " color " / " size }}</code>
                    <Hds::Badge
                        @icon="activity"
                        @text="Lorem ipsum"
                        @size={{size}}
                        @type={{type}}
                        @color={{color}}
                    />
                    <Hds::Badge
                        @text="Lorem ipsum"
                        @size={{size}}
                        @type={{type}}
                        @color={{color}}
                    />
                    <Hds::Badge
                        @icon="activity"
                        @srOnlyText="Lorem Ipsum"
                        @size={{size}}
                        @type={{type}}
                        @color={{color}}
                    />
                </div>
            {{/each}}
        {{/each}}
    </div>
{{/each}}