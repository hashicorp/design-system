{{page-title "Card"}}

<h2 class="dummy-h2">Card</h2>

<h3 class="dummy-h3">Container</h3>
<div class="dummy-card-base-sample">
    <Hds::Card::Container>
        <DummyPlaceholder
            @text="Content"
            @width="200"
            @height="200"
            @background="transparent"
        />
    </Hds::Card::Container>
</div>

<h3 class="dummy-h3">Levels:</h3>
<div class="dummy-card-base-sample">
    {{#each @model.LEVELS as |level|}}
        <Hds::Card::Container @level={{level}}>
            <DummyPlaceholder
                @text={{level}}
                @width="200"
                @height="200"
                @background="transparent"
            />
        </Hds::Card::Container>
    {{/each}}
</div>

<h3 class="dummy-h3">Border:</h3>
<div class="dummy-card-base-sample">
    {{#each @model.LEVELS as |level|}}
        <Hds::Card::Container @level={{level}} @hasBorder={{true}}>
            <DummyPlaceholder
                @text={{level}}
                @width="200"
                @height="200"
                @background="transparent"
            />
        </Hds::Card::Container>
    {{/each}}
</div>

<h3 class="dummy-h3">Background:</h3>
<div class="dummy-card-base-sample">
    {{#each @model.BACKGROUNDS as |background|}}
        <Hds::Card::Container @level="mid" @hasBorder={{true}} @background={{background}}>
            <DummyPlaceholder
                @text={{background}}
                @width="200"
                @height="200"
                @background="transparent"
            />
        </Hds::Card::Container>
    {{/each}}
</div>

<h3 class="dummy-h3">Overflow:</h3>
<div class="dummy-card-base-sample">
    <Hds::Card::Container @level="mid" @hasBorder={{true}}>
        <div class="dummy-card-overflow__wrapper-relative">
            <DummyPlaceholder
                @text="hidden (default)"
                @width="200"
                @height="200"
                @background="#e1f5fe"
            />
            <div class="dummy-card-overflow__content-absolute" />
        </div>
    </Hds::Card::Container>
    <Hds::Card::Container @level="mid" @hasBorder={{true}} @overflow="visible">
        <div class="dummy-card-overflow__wrapper-relative">
            <DummyPlaceholder
                @text="visible"
                @width="200"
                @height="200"
                @background="#e1f5fe"
            />
            <div class="dummy-card-overflow__content-absolute" />
        </div>
    </Hds::Card::Container>
</div>
