<Hds::FilterBar @filters={{this.demoGenericFilters}} @onFilter={{this.demoUpdateGenericFilters}} as |F|>
  <F.FiltersDropdown as |D|>
    <D.FilterGroup @key="demo-generic" @text="Generic" @type="generic" as |F|>
      <F.Generic as |G|>
        <Hds::Button
          @text="Add custom filter"
          @color="secondary"
          @size="small"
          {{on "click" (fn this.onGenericFilterUpdate G.updateFilter)}}
        />
      </F.Generic>
    </D.FilterGroup>
  </F.FiltersDropdown>
</Hds::FilterBar>