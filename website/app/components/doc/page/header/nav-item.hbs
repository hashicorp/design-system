<li class="doc-page-header__nav-item-text" ...attributes>
  {{#if @model}}
    <LinkTo
      class="doc-text-navigation {{if (eq @currentTopRoute @route) 'is-current-route'}}"
      @route={{@route}}
      @model={{@model}}
    >{{@label}}</LinkTo>
  {{else}}
    <LinkTo
      class="doc-text-navigation {{if (eq @currentTopRoute @route) 'is-current-route'}}"
      @route={{@route}}
    >{{@label}}</LinkTo>
  {{/if}}
</li>