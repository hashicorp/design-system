<div class="doc-form-filter">
  {{#let (unique-id) as |searchId|}}
    <Doc::Form::Label @for={{searchId}} @label={{@label}} />
    <input
      type="search"
      name="search"
      id={{searchId}}
      class="doc-form-filter__control"
      placeholder={{@placeholder}}
      value={{@searchQuery}}
      {{on "input" (perform @onInput value="target.value")}}
    />
  {{/let}}
</div>