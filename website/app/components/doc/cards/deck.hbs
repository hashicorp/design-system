<ul class={{this.classNames}} ...attributes role="list">
  {{#if @cards}}
    {{#each @cards as |card|}}
      <Doc::Cards::Card
        @image={{card.image}}
        @title={{card.title}}
        @caption={{card.caption}}
        @status={{card.status}}
        @route={{card.route}}
        @model={{card.model}}
        @href={{card.href}}
        @layout={{@layout}}
      />
    {{/each}}
  {{else}}
    {{yield}}
  {{/if}}
</ul>