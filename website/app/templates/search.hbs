{{page-title "Search"}}

<Doc::Page::Stage>
  <Doc::Page::Cover @title="Search" />
  <Doc::Page::Content @breakthrough={{true}}>
    <Doc::Form::Search
      @label="Full-text search"
      @placeholder="Type to start searching..."
      @searchQuery={{this.searchQuery}}
      @onInput={{this.searchFullText}}
    />
    {{#if @model.results}}
      <h2 class="doc-text-h2">Search results</h2>
      {{#if (eq @model.results null)}}
        <p class="doc-text-body">No results found 🤷🏾‍♀️</p>
      {{else}}
        <Doc::SearchResults::List @results={{@model.results}} />
      {{/if}}
    {{/if}}
  </Doc::Page::Content>
</Doc::Page::Stage>