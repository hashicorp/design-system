<Hds::Button
  class="{{this.classNames}} {{if this.isSuccess 'is-success'}}"
  @size={{this.size}}
  @isFullWidth={{@isFullWidth}}
  @text={{@text}}
  @icon={{this.icon}}
  @isIconOnly={{@isIconOnly}}
  {{on "click" this.copyCode}}
  ...attributes
  @color="secondary"
  @iconPosition="trailing"
  @clipboardText={{@clipboardText}}
/>