<Hds::Button
  class="{{if this.isSuccess 'is-success'}}"
  @size={{this.size}}
  @isFullWidth={{@isFullWidth}}
  @text={{@text}}
  @icon="{{if this.isSuccess 'clipboard-checked' 'clipboard-copy'}}"
  {{on "click" this.copyCode}}
  ...attributes
  @color="secondary"
  @iconPosition="trailing"
  @clipboardText={{@clipboardText}}
/>