<Hds::Button
  class="{{this.classNames}} {{if this.isSuccess 'hds-copy-button--success'}}"
  @size={{this.size}}
  @isFullWidth={{@isFullWidth}}
  @text={{@text}}
  @icon={{this.icon}}
  @isIconOnly={{@isIconOnly}}
  @color="secondary"
  @iconPosition="trailing"
  @clipboardTarget={{this.clipboardTarget}}
  {{on "click" this.copyCode}}
/>