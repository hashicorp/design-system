<button
  type="button"
  class="{{this.classNames}} {{if this.isSuccess 'is-success'}}"
  {{on "click" this.copyCode}}
  ...attributes
>
  <div class="hds-copy-snippet__text hds-typography-code-100">
    {{this.text}}
  </div>
  <FlightIcon @name="{{if this.isSuccess 'clipboard-checked' 'clipboard-copy'}}" class="hds-copy-snippet__icon" />
</button>