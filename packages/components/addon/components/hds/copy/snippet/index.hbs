<Hds::Button
  class="hds-copy-snippet {{if this.isSuccess 'hds-copy-snippet__success'}}"
  @isFullWidth={{@isFullWidth}}
  @text={{@text}}
  @icon={{this.icon}}
  @color={{this.color}}
  {{on "click" this.copyCode}}
  ...attributes
  @size="small"
  @iconPosition="trailing"
/>