<nav class="hds-pagination-nav" aria-label="Pagination navigation" ...attributes>
  <Hds::Pagination::Nav::ButtonArrow
    @direction="prev"
    @type={{this.type}}
    @disabled={{this.isDisabledPrev}}
    {{! Default - Uses button with onClick: }}
    @onClick={{unless @model (this.onPageChange)}}
    {{! Optional - Uses model with url query & route: }}
    @query={{if (and @model @model.previousPageToken) (hash next=undefined prev=@model.previousPageToken)}}
    @route={{if (and @model @model.previousPageToken) this.currentRouteName}}
  />

  {{#if (or (eq this.type "numbered") (eq this.type "truncated"))}}
    <ul class="hds-pagination-nav__page-list">
      {{#each this.pages as |page|}}
        {{#if (eq page "â€¦")}}
          <Hds::Pagination::Nav::Ellipsis />
        {{else}}
          <Hds::Pagination::Nav::ButtonNumber
            @page={{page}}
            @onClick={{this.onPageChange}}
            @isSelected={{if (eq page this.currentPage) true false}}
          />
        {{/if}}
      {{/each}}
    </ul>
  {{/if}}

  <Hds::Pagination::Nav::ButtonArrow
    @direction="next"
    @type={{this.type}}
    @disabled={{this.isDisabledNext}}
    {{! Default - Uses button with onClick: }}
    @onClick={{unless @model (this.onPageChange)}}
    {{! Optional - Uses model with url query & route: }}
    @query={{if (and @model @model.nextPageToken) (hash prev=undefined next=@model.nextPageToken)}}
    @route={{if (and @model @model.nextPageToken) this.currentRouteName}}
  />
</nav>