{{! template-lint-disable simple-unless }}
<nav class="hds-pagination-nav" aria-label="Pagination navigation" ...attributes>
  {{! TODO use `has-block-params`? https://api.emberjs.com/ember/4.4/classes/Ember.Templates.helpers/methods/action?anchor=has-block-params }}
  {{#unless (has-block)}}
    <Hds::Pagination::Nav::ButtonArrow
      @direction="prev"
      @hideLabel={{this.hideLabels}}
      @onClick={{this.onPageChange}}
      @disabled={{this.isDisabledPrev}}
    />
  {{else}}
    {{yield (hash ButtonPrev=(component "hds/pagination/nav/button-arrow" direction="prev"))}}
  {{/unless}}

  {{#if (eq this.type "numbered")}}
    <ul class="hds-pagination-nav__page-list">
      {{#each this.pages as |page|}}
        {{#if (eq page "â€¦")}}
          <Hds::Pagination::Control::Ellipsis />
        {{else}}
          <Hds::Pagination::Nav::ButtonNumber
            @page={{page}}
            @onClick={{this.onPageChange}}
            @isSelected={{if (eq page this.currentPage) true false}}
          />
        {{/if}}
      {{/each}}
    </ul>
  {{/if}}

  {{#unless (has-block)}}
    <Hds::Pagination::Nav::ButtonArrow
      @direction="next"
      @hideLabel={{this.hideLabels}}
      @onClick={{this.onPageChange}}
      @disabled={{this.isDisabledNext}}
    />
  {{else}}
    {{yield (hash ButtonNext=(component "hds/pagination/nav/button-arrow" direction="next"))}}
  {{/unless}}
</nav>
{{! template-lint-enable simple-unless }}