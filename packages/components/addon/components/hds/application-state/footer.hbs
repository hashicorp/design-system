<div class="hds-application-state__footer">
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    <Hds::Link::Standalone @icon={{@iconName}} @text={{@footerText}} @href={{@href}} />
    {{#if @errorCode}}
      <Hds::Link::Standalone
        @icon={{if @helpIcon @helpIcon "help"}}
        @text={{if @helpText @helpText "Need Help"}}
        @iconPosition="trailing"
        @href={{@helpHref}}
      />
    {{/if}}
  {{/if}}
</div>