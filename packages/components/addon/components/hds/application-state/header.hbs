<div class="hds-application-state__header" ...attributes>
  {{#if @subtitle}}
    <div class="hds-application-state__header__icon">
      <FlightIcon @name={{if @icon @icon "alert-circle"}} @size="24" />
    </div>
  {{/if}}
  <div class="hds-application-state__header__title hds-typography-display-400 hds-font-weight-semibold">
    {{@title}}
  </div>
  {{#if @subtitle}}
    <div class="hds-application-state__header__errorCode hds-typography-body-100 hds-font-weight-medium">
      {{@subtitle}}
    </div>
  {{/if}}
</div>