<div class="hds-code-block-wrapper">
  <div
    class={{this.classNames}}
    {{style maxHeight=@maxHeight}}
    {{hds-code-mirror
      value=@value
      options=@options
      lineNumbers=@lineNumbers
      lineWrapping=@lineWrapping
      readOnly=@readOnly
      mode=@language
    }}
    ...attributes
  ></div>

  {{#if @hasCopyButton}}
    <Hds::Copy::Button
      @text="Copy"
      @isIconOnly={{true}}
      @size="small"
      class="hds-code-block__copy-button"
      @textToCopy={{@value}}
    />
  {{/if}}
</div>