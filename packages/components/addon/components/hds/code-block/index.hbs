<div class={{this.classNames}} ...attributes>
  <pre contentEditable={{not this.readOnly}} data-line={{@highlight}}>
    {{~! ~}}
    <code
      class="code-block__code"
      {{style maxHeight=@maxHeight}}
      {{did-insert this.setPrismCode}}
      {{did-update this.setPrismCode this.code @language}}
    >
      {{~this.prismCode~}}
    </code>
    {{~! ~}}
  </pre>

  {{#if @hasCopyButton}}
    <Hds::CodeBlock::CopyButton @textToCopy={{@value}} />
  {{/if}}
</div>