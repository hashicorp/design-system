<button class="hds-dropdown-toggle-icon" aria-label={{@text}} type="button" ...attributes>
  <div class="hds-dropdown-toggle-icon__wrapper">
    {{#if @imageSrc}}
      <img src={{@imageSrc}} alt="" role="presentation" height="32" width="32" />
    {{else}}
      <FlightIcon @name={{this.iconName}} @size="24" />
    {{/if}}
  </div>
  {{#if this.hasChevron}}
    <FlightIcon @name="chevron-{{if @isOpen 'up' 'down'}}" class="hds-dropdown-toggle-icon__chevron" />
  {{/if}}
</button>