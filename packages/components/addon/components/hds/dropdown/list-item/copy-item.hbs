<li class={{this.classNames}} ...attributes>
  {{#if @copyItemTitle}}
    <Hds::Text::Body
      class="hds-dropdown-list-item__copy-item-title"
      @tag="div"
      @size="100"
      @weight="semibold"
      @color="faint"
    >{{@copyItemTitle}}</Hds::Text::Body>
  {{/if}}
  <Hds::Copy::Snippet @color="secondary" @textToCopy={{this.text}} @isTruncated={{this.isTruncated}} />
</li>