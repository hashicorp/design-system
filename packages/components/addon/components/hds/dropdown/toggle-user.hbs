<button class={{this.classNames}} aria-label={{@text}} type="button" ...attributes>
  <div class="hds-dropdown-toggle-user__avatar">
    {{#if @avatarUrl}}
      <img src={{@avatarUrl}} alt="" role="presentation" height="32" width="32" />
    {{else}}
      <FlightIcon @name="user" @size="24" />
    {{/if}}
  </div>
  <FlightIcon @name="chevron-{{if @isOpen 'up' 'down'}}" />
</button>