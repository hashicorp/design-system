<Hds::Disclosure>
  <:toggle as |t|>
    {{#if (eq @toggle "text")}}
      <Hds::Dropdown::ToggleButton @text={{@toggleText}} @color={{@color}} {{on "click" t.onClickToggle}} />
    {{else}}
      <Hds::Dropdown::ToggleIcon @text={{@toggleText}} {{on "click" t.onClickToggle}} @iconName={{@iconName}} @hasChevron={{@hasChevron}} @isOpen={{@isOpen}} />
    {{/if}}
  </:toggle>
  <:content>
    <ul class="hds-dropdown-list hds-dropdown-list--absolute-right">
      {{yield
        (hash
          ListItem=(component "hds/dropdown/list-item") Separator=(component "hds/dropdown/list-item" item="separator")
        )
      }}
    </ul>
  </:content>
</Hds::Disclosure>