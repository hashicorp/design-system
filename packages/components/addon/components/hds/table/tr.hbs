<tr class="hds-table__tr" ...attributes>
  {{#if @isSelectable}}
    <Hds::Table::ThSelectable
      @scope={{(or @selectableScope "col")}}
      @isSelected={{@isSelected}}
      @onChange={{@onSelectionChange}}
      @didInsert={{@didInsert}}
      @willDestroy={{@willDestroy}}
      @selectionKey={{@selectionKey}}
      @selectAllAriaLabel={{@selectAllAriaLabel}}
      @deselectAllAriaLabel={{@deselectAllAriaLabel}}
      @selectRowAriaLabel={{@selectRowAriaLabel}}
      @deselectRowAriaLabel={{@deselectRowAriaLabel}}
    />
  {{/if}}

  {{yield}}
</tr>