{{#let (unique-id) as |uniqueId|}}
  <button
    type="button"
    class={{this.classNames}}
    {{hds-tooltip @tooltip}}
    aria-labelledby="{{uniqueId}} {{@labelId}}"
    ...attributes
  >
    <span id={{uniqueId}} class="hds-table__th-button-aria-label-hidden-segment">More information for</span>
    <FlightIcon @name="info" />
  </button>
{{/let}}