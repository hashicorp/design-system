{{#let (unique-id) as |uniqueId|}}
  <button
    type="button"
    class={{this.classNames}}
    {{on "click" this.onClick}}
    aria-labelledby="prefix-{{uniqueId}} {{@labelId}} suffix-{{uniqueId}}"
    ...attributes
  >
    <span id="prefix-{{uniqueId}}" class="hds-table__th-button-aria-label-hidden-segment">Sort by</span>
    <span id="suffix-{{uniqueId}}" class="hds-table__th-button-aria-label-hidden-segment">{{this.sortOrderLabel}}</span>
    <FlightIcon @name={{this.icon}} />
  </button>
{{/let}}