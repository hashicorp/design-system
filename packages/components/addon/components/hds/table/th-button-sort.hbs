{{#let (unique-id) as |prefixId|}}
  <button
    type="button"
    class={{this.classNames}}
    {{on "click" this.onClick}}
    aria-labelledby="{{prefixId}} {{@labelId}}"
    ...attributes
  >
    <span id={{prefixId}} class="hds-table__th-button-aria-label-prefix">Sort by</span>
    <FlightIcon @name={{this.icon}} />
  </button>
{{/let}}