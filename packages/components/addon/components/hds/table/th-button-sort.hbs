<button
  type="button"
  class={{this.classNames}}
  {{on "click" this.onClick}}
  aria-labelledby="{{this.prefixLabelId}} {{@labelId}} {{this.suffixLabelId}}"
  ...attributes
>
  <span id={{this.prefixLabelId}} class="hds-table__th-button-aria-label-hidden-segment">Sort by</span>
  <span id={{this.suffixLabelId}} class="hds-table__th-button-aria-label-hidden-segment">{{this.sortOrderLabel}}</span>
  <FlightIcon @name={{this.icon}} />
</button>