<Hds::Table::Th class="hds-table__th--is-selectable" @scope={{(or @scope "col")}} ...attributes>
  <Hds::Form::Checkbox::Base
    class="hds-table__checkbox"
    id={{this.checkboxId}}
    aria-label={{this.ariaLabel}}
    {{did-insert this.didInsert}}
    {{will-destroy this.willDestroy}}
    {{on "change" this.onChange}}
    name={{concat "checkbox-" @scope}}
  />
</Hds::Table::Th>