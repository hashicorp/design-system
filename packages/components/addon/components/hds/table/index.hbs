<table class="hds-table {{if @isStriped 'hds-table--striped'}}" data-test-table ...attributes>
  <thead class="hds-table__thead" data-test-table-head>
    <Hds::Table::Row>
      {{yield to="head"}}
    </Hds::Table::Row>
  </thead>
  <tbody class="hds-table__tbody" data-test-table-body>
    {{#if @model}}
      {{#each @model as |row|}}
        {{yield row to="body"}}
      {{/each}}
    {{else}}
      {{yield to="body"}}
    {{/if}}
  </tbody>
</table>