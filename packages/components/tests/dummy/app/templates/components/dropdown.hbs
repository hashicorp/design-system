          <Hds::Dropdown::Toggle::Button
            @badge="Sit"
            @badgeIcon="hexagon"
            @text="Lorem"
            @color={{color}}
            mock-state-value={{state}}
          />
        </SG.Item>
      {{/each}}
      <SG.Item @label="With badge">
        <Hds::Dropdown::Toggle::Button
          @badge="Sit"
          @badgeIcon="hexagon"
          @text="Lorem"
          @isOpen={{true}}
          @color={{color}}
        />
      </SG.Item>
    {{/each}}

    {{#each @model.TOGGLE_STATES as |state|}}
      <SG.Item @label="Icon">
        <Hds::Dropdown::Toggle::Icon
          @icon="more-horizontal"
          @text="overflow menu"
          @hasChevron={{false}}
          mock-state-value={{state}}
        />
      </SG.Item>
