    {{#each @model.TOGGLE_STATES as |state|}}
      <SG.Item @label="Avatar+chevron">
        <Hds::Dropdown::Toggle::Icon @text={{state}} @imageSrc="/assets/images/avatar.png" mock-state-value={{state}} />
      </SG.Item>
    {{/each}}
    <SG.Item @label="Avatar+chevron">
