  <div class="dummy-link-base-sample">
    <Hds::LinkTo::Standalone @icon="plus" @text="text & leading icon" @route="components.link-to" />
    <Hds::LinkTo::Standalone
      @icon="arrow-right"
      @text="text & trailing icon"
