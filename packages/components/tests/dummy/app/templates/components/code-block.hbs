      <Hds::CodeBlock
        @lineWrapping={{true}}
        @value="console.log('I am JavaScript code', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam');"
      />
    </SG.Item>
  </Shw::Flex>

