<div class="hds-menu-primitive" ...attributes {{this.setupMenuPrimitiveContainer}}>
  <div class="hds-menu-primitive__toggle" tabindex="-1">
    {{yield (hash isOpen=this.isOpen setupMenuPrimitiveToggle=(modifier this.setupMenuPrimitiveToggle)) to="toggle"}}
  </div>
  <div class="hds-menu-primitive__content" tabindex="-1" {{this.setupMenuPrimitivePopover}}>
    {{#if this.isOpen}}
      {{yield (hash toggleElement=this.toggleElement close=this.close) to="content"}}
    {{/if}}
  </div>
</div>
{{! template-lint-enable no-invalid-interactive }}