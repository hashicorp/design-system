{{! template-lint-disable no-invalid-interactive }}
<div
  class="hds-menu-primitive"
  ...attributes
  {{did-insert this.didInsert}}
  {{on "mouseenter" this.onMouseEnter}}
  {{on "mouseleave" this.onMouseLeave}}
  {{on "focusin" this.onFocusIn}}
  {{on "focusout" this.onFocusOut}}
>
  <div class="hds-menu-primitive__toggle" tabindex="-1">
    {{yield (hash popovertarget=this.popoverId isOpen=this.isOpen didInsertToggle=this.didInsertToggle togglePopover=this.togglePopover) to="toggle"}}
  </div>
  <div
    id={{this.popoverId}}
    class="hds-menu-primitive__content"
    tabindex="-1"
    popover="auto"
    {{did-insert this.didInsertPopover}}
    {{will-destroy this.willDestroyPopover}}
  >
    {{#if this.isOpen}}
      {{yield (hash toggleElement=this.toggleElement close=this.close) to="content"}}
    {{/if}}
  </div>
</div>
{{! template-lint-enable no-invalid-interactive }}