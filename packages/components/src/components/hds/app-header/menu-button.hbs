<Hds::Button
  class="hds-app-header__menu-button"
  @text={{hds-t "hds.components.common.menu" default="Menu"}}
  @icon={{this.icon}}
  @iconPosition="trailing"
  {{on "click" this.onClick}}
  aria-controls={{@menuContentId}}
  aria-expanded={{if @isOpen "true" "false"}}
  ...attributes
/>