<div class={{this.classNames}} ...attributes>
  {{! GlobalItems }}
  <div class="hds-app-header__sub-section">
    {{! Intended for: ProductMenu, HomeLink/Logo }}
    {{yield to="globalItemsBefore"}}
    {{! Intended for: OrgPicker }}
    <div class="hds-app-header__global-items-after">
      {{yield to="globalItemsAfter"}}
    </div>
  </div>

  {{! UtilityItems }}
  <div class="hds-app-header__sub-section">
    {{! Button appears in mobile/tablet view (hidden in desktop view) }}
    <Hds::AppHeader::MenuButton
      @onClickToggle={{this.onClickToggle}}
      @isOpen={{this.isOpen}}
      @menuContentId={{this.menuContentId}}
    />

    {{! Intended for: Search, HelpMenu, GeoPicker, UserMenu }}
    <div class="hds-app-header__menu" id={{this.menuContentId}}>
      <div class="hds-app-header__global-items-in-menu">
        {{yield to="globalItemsAfter"}}
      </div>
      {{yield to="utilityItems"}}
    </div>
  </div>
</div>