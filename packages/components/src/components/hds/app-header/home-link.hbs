<Hds::Interactive
  class="hds-app-header__home-link"
  @current-when={{@current-when}}
  @models={{hds-link-to-models @model @models}}
  @query={{hds-link-to-query @query}}
  @replace={{@replace}}
  @route={{@route}}
  @isRouteExternal={{@isRouteExternal}}
  @href={{@href}}
  @isHrefExternal={{@isHrefExternal}}
  ...attributes
  aria-label={{if this.isIconOnly this.text null}}
>
  {{#if this.isIconOnly}}
    {{#if this.icon}}
      <Hds::Icon @name={{@icon}} @color={{@color}} @stretched={{true}} />
    {{/if}}
  {{else}}
    {{#if this.icon}}
      <Hds::Icon @name={{@icon}} @color={{@color}} @stretched={{true}} />
    {{/if}}
    <Hds::Text::Display
      class="hds-app-header__home-link-title"
      @size="100"
      @color="foreground-high-contrast"
    >{{this.text}}</Hds::Text::Display>
  {{/if}}
</Hds::Interactive>