<Hds::PopoverPrimitive
  class="hds-rich-tooltip"
  @isInline={{@isInline}}
  @isOpen={{@isOpen}}
  @onOpen={{@onOpen}}
  @onClose={{@onClose}}
  @enableSoftEvents={{this.enableSoftEvents}}
  @enableClickEvents={{this.enableClickEvents}}
  @toggleContainsInteractive={{@toggleContainsInteractive}}
  @toggleAriaLabel={{@toggleAriaLabel}}
  @popoverHasArrow={{true}}
  @popoverWidth={{@popoverWidth}}
  @popoverHeight={{@popoverHeight}}
  @anchoredPositionOptions={{this.anchoredPositionOptions}}
  ...attributes
>
  <:toggle as |t|>
    {{yield
      (hash
        ToggleInfoText=(component "hds/rich-tooltip/toggle/info-text" isInline=@isInline)
        ToggleGeneric=(component "hds/yield")
        isOpen=t.isOpen
      )
    }}
  </:toggle>
  <:content as |c|>
    <div class="hds-rich-tooltip__content">
      {{yield (hash PopoverContent=(component "hds/yield") close=c.hidePopover)}}
    </div>
  </:content>
</Hds::PopoverPrimitive>