<Hds::MenuPrimitive
  class={{this.classNames}}
  @isOpen={{@isOpen}}
  @onClose={{@onClose}}
  {{!-- TODO this is not always true! --}}
  @enableClickEvents={{true}}
  @enableSoftEvents={{true}}
  @popoverOptions={{this.popoverOptions}}
  ...attributes
>
  <:toggle as |t|>
    {{#if @isInteractive}}
      {{yield (hash setupToggle=t.setupMenuPrimitiveToggle) to="toggle"}}
    {{else}}
      <button class="hds-popover__button" {{t.setupMenuPrimitiveToggle}}>
        {{yield to="toggle"}}
      </button>
    {{/if}}
  </:toggle>
  <:content as |c|>
    <div class="hds-popover__content" {{style width=@width max-height=@height}}>
      {{yield (hash close=c.close) to="content"}}
    </div>
  </:content>
</Hds::MenuPrimitive>