<Hds::Table::Th
  class="hds-table__th--is-selectable"
  aria-sort={{this.ariaSort}}
  @scope={{@selectionScope}}
  ...attributes
>
  <div class="hds-table__th-content">
    <Hds::Form::Checkbox::Base
      id={{this.checkboxId}}
      class="hds-table__checkbox"
      checked={{@isSelected}}
      aria-label={{this.ariaLabel}}
      {{did-insert this.didInsert}}
      {{will-destroy this.willDestroyNode}}
      {{on "change" this.onSelectionChange}}
    />
    {{#if this.isSortable}}
      <span id={{this.labelId}} class="sr-only">selection state</span>
      <Hds::Table::ThButtonSort @sortOrder={{@sortOrder}} @onClick={{@onClickSort}} @labelId={{this.labelId}} />
    {{/if}}
  </div>
</Hds::Table::Th>