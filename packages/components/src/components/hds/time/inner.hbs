      class="hds-time"
      datetime={{@isoUtcStringInner}}
      ...attributes
      {{did-insert @register}}
      {{will-destroy @unregister}}
    >
      {{hds-format-date @endDate @displayInner.options.displayFormat}}
    </time>
  </span>
{{else}}
  --
{{/if}}