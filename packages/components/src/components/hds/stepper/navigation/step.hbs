{{! template-lint-disable require-context-role no-invalid-role }}
{{! template-lint-disable require-presentational-children }}
<li class={{this.classNames}} ...attributes role={{if this.isNavInteractive "presentation"}}>
  {{#if this.isNavInteractive}}
    <button
      class="hds-stepper-navigation__step__content hds-stepper-navigation__step__btn"
      id={{this._stepId}}
      tabindex={{unless (eq this.status "active") "-1"}}
      type="button"
      role="tab"
      aria-controls={{this.coupledPanelId}}
      aria-selected={{if (eq this.status "active") "true" "false"}}
      aria-disabled={{if (eq this.status "incomplete") "true" "false"}}
      {{on "click" this.onStepChange}}
      {{on "keyup" this.onKeyUp}}
      {{this._setUpStep this.didInsertNode this.willDestroyNode}}
    >
      <div class="hds-stepper-navigation__step__progress">
        <Hds::Stepper::Step::Indicator
          @text="{{this.stepNumber}}"
          @status={{this.stepIndicatorStatus}}
          @isInteractive={{true}}
          class="hds-stepper-navigation__step__indicator"
        />
      </div>
      <div class="hds-stepper-navigation__step__text">
        <Hds::Text::Body
          class="hds-stepper-navigation__step__title"
          @tag={{this.titleTag}}
          @size="200"
          @weight="semibold"
        >
          <span class="sr-only">{{this.statusSrOnlyText}}</span>
          {{yield to="title"}}
        </Hds::Text::Body>
        <Hds::Text::Body
          class="hds-stepper-navigation__step__description"
          @tag="div"
          @size="100"
          @weight="regular"
          @color="regular"
        >
          {{yield to="description"}}
        </Hds::Text::Body>
      </div>
    </button>
  {{else}}
    <div
      class="hds-stepper-navigation__step__content"
      id={{this._stepId}}
      aria-current={{if (eq this.status "active") "true" "false"}}
      {{this._setUpStep this.didInsertNode this.willDestroyNode}}
    >
      <div class="hds-stepper-navigation__step__progress">
        <Hds::Stepper::Step::Indicator
          @text="{{this.stepNumber}}"
          @status={{this.stepIndicatorStatus}}
          @isInteractive={{false}}
          class="hds-stepper-navigation__step__indicator"
        />
      </div>
      <div class="hds-stepper-navigation__step__text">
        <Hds::Text::Body
          class="hds-stepper-navigation__step__title"
          @tag={{this.titleTag}}
          @size="200"
          @weight="semibold"
        >
          <span class="sr-only">{{this.statusSrOnlyText}}</span>
          {{yield to="title"}}
        </Hds::Text::Body>
        <Hds::Text::Body
          class="hds-stepper-navigation__step__description"
          @tag="div"
          @size="100"
          @weight="regular"
          @color="regular"
        >
          {{yield to="description"}}
        </Hds::Text::Body>
      </div>
    </div>
  {{/if}}
</li>
{{! template-lint-enable require-presentational-children }}
{{! template-lint-enable require-context-role no-invalid-role }}