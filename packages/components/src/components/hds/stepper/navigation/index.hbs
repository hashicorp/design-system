<div class={{this.classNames}} ...attributes {{this._setUpStepperNavigation}}>
  <ol class="hds-stepper-navigation__list" role={{if this.isInteractive "tablist"}}>
    {{#if @steps}}
      {{#each @steps as |step|}}
        <Hds::Stepper::Navigation::Step
          @currentStep={{this.currentStep}}
          @isNavInteractive={{this.isInteractive}}
          @titleTag={{this.titleTag}}
          @didInsertNode={{this.didInsertStep}}
          @willDestroyNode={{this.willDestroyStep}}
          @stepIds={{this._stepIds}}
          @panelIds={{this._panelIds}}
          @onStepChange={{@onStepChange}}
          @onKeyUp={{this.onKeyUp}}
        >
          <:title>{{step.title}}</:title>
          <:description>{{step.description}}</:description>
        </Hds::Stepper::Navigation::Step>
      {{/each}}
    {{else}}
      {{yield
        (hash
          Step=(component
            "hds/stepper/navigation/step"
            currentStep=this.currentStep
            isNavInteractive=this.isInteractive
            titleTag=this.titleTag
            stepIds=this._stepIds
            panelIds=this._panelIds
            didInsertNode=this.didInsertStep
            willDestroyNode=this.willDestroyStep
            onStepChange=@onStepChange
            onKeyUp=this.onKeyUp
          )
        )
      }}
    {{/if}}
  </ol>
  {{#if @steps}}
    {{#each @steps}}
      <Hds::Stepper::Navigation::Panel
        @currentStep={{this.currentStep}}
        @stepIds={{this._stepIds}}
        @panelIds={{this._panelIds}}
        @didInsertNode={{this.didInsertPanel}}
        @willDestroyNode={{this.willDestroyPanel}}
      >
        {{yield to="body"}}
      </Hds::Stepper::Navigation::Panel>
    {{/each}}
  {{else}}
    {{yield
      (hash
        Panel=(component
          "hds/stepper/navigation/panel"
          currentStep=this.currentStep
          stepIds=this._stepIds
          panelIds=this._panelIds
          didInsertNode=this.didInsertPanel
          willDestroyNode=this.willDestroyPanel
        )
      )
    }}
  {{/if}}
</div>