<button
  type="button"
  class={{this.classNames}}
  {{on "click" this.onClick}}
  aria-labelledby="{{this.prefixLabelId}} {{@labelId}}"
  aria-expanded={{@isExpanded}}
  ...attributes
>
  <span id={{this.prefixLabelId}} class="hds-advanced-table__th-button-aria-label-hidden-segment">Toggle</span>
  <Hds::Icon @name={{this.icon}} />
</button>
<span class="sr-only">
  Toggle the visibility of the related rows.
</span>