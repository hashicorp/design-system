<tr class="hds-advanced-table__tr hds-advanced-table__tr--depth-{{@depth}}" role="row" ...attributes id={{this.rowId}}>
  {{#if @isSelectable}}
    <Hds::AdvancedTable::ThSelectable
      @isSelected={{@isSelected}}
      @selectionScope={{@selectionScope}}
      @selectionKey={{this.selectionKey}}
      @selectionAriaLabelSuffix={{@selectionAriaLabelSuffix}}
      @sortBySelectedOrder={{@sortBySelectedOrder}}
      @didInsertCheckbox={{@didInsertCheckbox}}
      @willDestroy={{@willDestroy}}
      @onClickSortBySelected={{@onClickSortBySelected}}
      @onSelectionChange={{@onSelectionChange}}
    />
  {{/if}}

  {{yield}}
</tr>