<Hds::Dropdown class="hds-advanced-table__th-context-menu" @enableCollisionDetection={{true}} ...attributes as |D|>
  <D.ToggleIcon
    @icon="more-vertical"
    @text="Additional actions for {{@column.label}}"
    @hasChevron={{false}}
    @size="small"
  />

  {{#each this._options as |option|}}
    <D.Interactive
      @icon={{option.icon}}
      data-test-context-option-key={{option.key}}
      {{on "click" (fn option.action @column D.close)}}
    >
      {{option.label}}
    </D.Interactive>
  {{/each}}
</Hds::Dropdown>