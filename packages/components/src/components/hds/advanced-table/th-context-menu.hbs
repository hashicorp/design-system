<Hds::Dropdown class={{this.classNames}} ...attributes as |D|>
  <D.ToggleIcon @icon="more-horizontal" @text="Context menu" @hasChevron={{false}} @size="small" />

  {{#each this._options as |option|}}
    <D.Interactive @icon={{option.icon}} {{on "click" (fn option.action D.close)}}>{{option.label}}</D.Interactive>
  {{/each}}
</Hds::Dropdown>