<Hds::Text::Body class="hds-pagination-info" @tag="div" @size="100" @weight="medium" ...attributes>
  {{#if this.showTotalItems}}
    {{t
      "hds.components.pagination.info.range-of-total"
      start=@itemsRangeStart
      end=@itemsRangeEnd
      total=@totalItems
      htmlSafe=true
    }}
  {{else}}
    {{t "hds.components.pagination.info.range" start=@itemsRangeStart end=@itemsRangeEnd htmlSafe=true}}
  {{/if}}
</Hds::Text::Body>