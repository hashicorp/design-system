<Hds::Text::Body class="hds-pagination-info" @tag="div" @size="100" @weight="medium" ...attributes>
  {{#if this.showTotalItems}}
    {{hds-t
      "components.pagination.info.range-of-total"
      default=(concat @itemsRangeStart "–" @itemsRangeEnd " of " @totalItems)
      start=@itemsRangeStart
      end=@itemsRangeEnd
      total=@totalItems
    }}
  {{else}}
    {{hds-t
      "components.pagination.info.range"
      default=(concat @itemsRangeStart "–" @itemsRangeEnd)
      start=@itemsRangeStart
      end=@itemsRangeEnd
    }}
  {{/if}}
</Hds::Text::Body>