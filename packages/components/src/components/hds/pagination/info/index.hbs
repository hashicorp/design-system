<Hds::Text::Body class="hds-pagination-info" @tag="div" @size="100" @weight="medium" ...attributes>
  {{hds-t
    "hds.components.pagination.info"
    default=(if
      @showTotalItems
      (concat @itemsRangeStart "–" @itemsRangeEnd " of " @totalItems)
      (concat @itemsRangeStart "–" @itemsRangeEnd)
    )
    start=@itemsRangeStart
    end=@itemsRangeEnd
    total=@totalItems
    hasTotal=@showTotalItems
  }}
</Hds::Text::Body>