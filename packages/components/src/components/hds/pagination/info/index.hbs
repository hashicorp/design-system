<Hds::Text::Body class="hds-pagination-info" @tag="div" @size="100" @weight="medium" ...attributes>
  {{#if this.showTotalItems}}
    {{t
      "hds.components.pagination.info.range_of_total"
      start=@itemsRangeStart
      end=@itemsRangeEnd
      total=@totalItems
      showTotalItems=this.showTotalItems
      htmlSafe=true
    }}
  {{else}}
    {{@itemsRangeStart}}&ldash;{{@itemsRangeEnd}}
  {{/if}}
</Hds::Text::Body>