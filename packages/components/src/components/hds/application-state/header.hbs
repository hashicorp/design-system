<div class="hds-application-state__header" ...attributes>
  {{#if @errorCode}}
    <Hds::Text::Body class="hds-application-state__error-code" @tag="div" @size="100" @weight="medium" @color="foreground-faint">
      Error
      {{@errorCode}}
    </Hds::Text::Body>
  {{/if}}
  {{#if @icon}}
    <div class="hds-application-state__icon">
      <FlightIcon @color="var(--token-color-foreground-strong)" @name={{@icon}} @size="24" />
    </div>
  {{/if}}
  <Hds::Text::Display class="hds-application-state__title" @tag="div" @size="300" @weight="semibold" @color="strong">
    {{@title}}
  </Hds::Text::Display>
</div>