{{! NOTE: naming is temporary to not conflict with existing power-select wrapper }}
<div class={{this.classNames}} ...attributes>
  {{! temp notes...
    Required:
    * onChange
    * options or search
  }}

  {{#if (eq this.selectionType "single")}}
    <PowerSelect
      @ariaDescribedBy={{@ariaDescribedBy}}
      @ariaInvalid={{@ariaInvalid}}
      @ariaLabel={{@ariaLabel}}
      @ariaLabelledBy={{@ariaLabelledBy}}
      @disabled={{@disabled}}
      @onChange={{@onChange}}
      @options={{@options}}
      @renderInPlace={{true}}
      @searchEnabled={{@searchEnabled}}
      @selected={{@selected}}
      @verticalPosition={{@verticalPosition}}
      as |option|
    >
      {{yield option}}
    </PowerSelect>
  {{else}}
    <PowerSelectMultiple
      @ariaDescribedBy={{@ariaDescribedBy}}
      @ariaInvalid={{@ariaInvalid}}
      @ariaLabel={{@ariaLabel}}
      @ariaLabelledBy={{@ariaLabelledBy}}
      @disabled={{@disabled}}
      @onChange={{@onChange}}
      @options={{@options}}
      @renderInPlace={{true}}
      @searchEnabled={{@searchEnabled}}
      @selected={{@selected}}
      @verticalPosition={{@verticalPosition}}
      as |option|
    >
      {{option}}
    </PowerSelectMultiple>
  {{/if}}
</div>