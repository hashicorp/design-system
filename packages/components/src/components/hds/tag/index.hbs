<Hds::Text::Body
  class={{this.classNames}}
  @tag="span"
  @size="100"
  @weight="medium"
  @color="primary"
  {{this._setUpObserver}}
  ...attributes
>
  {{#if this.onDismiss}}
    <button class="hds-tag__dismiss" type="button" aria-label={{this.ariaLabel}} {{on "click" this.onDismiss}}>
      <Hds::Icon class="hds-tag__dismiss-icon" @name="x" @size="16" />
    </button>
  {{/if}}
  {{#if (or @href @route)}}
    {{#if this._isTextOverflow}}
      <Hds::Interactive
        class="hds-tag__link"
        @current-when={{@current-when}}
        @models={{hds-link-to-models @model @models}}
        @query={{hds-link-to-query @query}}
        @replace={{@replace}}
        @route={{@route}}
        @isRouteExternal={{@isRouteExternal}}
        @href={{@href}}
        @isHrefExternal={{@isHrefExternal}}
        {{hds-tooltip this.text options=(hash placement=this.tooltipPlacement)}}
      >
        <div class="hds-tag__text-container">
          {{this.text}}
        </div>
      </Hds::Interactive>
    {{else}}
      <Hds::Interactive
        class="hds-tag__link"
        @current-when={{@current-when}}
        @models={{hds-link-to-models @model @models}}
        @query={{hds-link-to-query @query}}
        @replace={{@replace}}
        @route={{@route}}
        @isRouteExternal={{@isRouteExternal}}
        @href={{@href}}
        @isHrefExternal={{@isHrefExternal}}
      >
        <div class="hds-tag__text-container">
          {{this.text}}
        </div>
      </Hds::Interactive>
    {{/if}}
  {{else}}
    {{#if this._isTextOverflow}}
      <Hds::TooltipButton class="hds-tag__text" @text={{this.text}} @placement={{this.tooltipPlacement}}>
        <div class="hds-tag__text-container">
          {{this.text}}
        </div>
      </Hds::TooltipButton>
    {{else}}
      <span class="hds-tag__text">
        <div class="hds-tag__text-container">
          {{this.text}}
        </div>
      </span>
    {{/if}}
  {{/if}}
</Hds::Text::Body>