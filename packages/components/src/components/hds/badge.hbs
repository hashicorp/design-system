<div class={{this.classNames}} ...attributes>
  {{#if @icon}}
    <div class="hds-badge__icon">
      <FlightIcon @name={{this.icon}} @size="16" @stretched={{true}} />
    </div>
  {{/if}}
  {{#if this.isIconOnly}}
    <span class="sr-only">{{this.text}}</span>
  {{else}}
    <div class="hds-badge__text">
      {{this.text}}
    </div>
  {{/if}}
</div>