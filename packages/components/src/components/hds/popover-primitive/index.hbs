<div class={{this.classNames}} ...attributes {{this.setupMenuPrimitiveContainer}}>
  {{#let (element (if this.containsInteractive 'div' 'button')) as |Tag|}}
    <Tag class={{this.classNamesToggle}} {{this.setupMenuPrimitiveToggle}}>
      {{yield (hash isOpen=this.isOpen) to="toggle"}}
    </Tag>
  {{/let}}
  <div class="hds-popover-primitive__content" role="tooltip" tabindex="-1" {{this.setupMenuPrimitivePopover}}>
    {{#if this.isOpen}}
      {{yield (hash toggleElement=this.toggleElement close=this.close) to="content"}}
    {{/if}}
  </div>
</div>