{{#if (eq this.componentTag "div")}}
  <div class={{this.classNames}} {{style this.inlineStyles}} ...attributes>{{yield}}</div>
{{else}}
  {{#let (element this.componentTag) as |Tag|}}<Tag
      class={{this.classNames}}
      {{style this.inlineStyles}}
      ...attributes
    >{{yield}}</Tag>{{/let}}
{{/if}}