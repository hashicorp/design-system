{{#if (eq this.tag "form")}}
  <form class="hds-form" {{style this.sectionMaxWidthStyle}} ...attributes>
    {{yield
      (hash
        Header=(component "hds/form/header")
        HeaderTitle=(component "hds/form/header/title")
        HeaderDescription=(component "hds/form/header/description")
        Section=(component "hds/form/section")
        SectionHeader=(component "hds/form/section/header")
        SectionHeaderTitle=(component "hds/form/header/title" size="300")
        SectionHeaderDescription=(component "hds/form/header/description")
        SectionMultiFieldGroup=(component "hds/form/section/multi-field-group")
        Separator=(component "hds/form/separator")
        ButtonSet=(component "hds/button-set")
      )
    }}
  </form>
{{else}}
  <div class="hds-form" {{style this.sectionMaxWidthStyle}} ...attributes>
    {{yield
      (hash
        Header=(component "hds/form/header")
        HeaderTitle=(component "hds/form/header/title")
        HeaderDescription=(component "hds/form/header/description")
        Section=(component "hds/form/section")
        SectionHeader=(component "hds/form/section/header")
        SectionHeaderTitle=(component "hds/form/header/title" size="300")
        SectionHeaderDescription=(component "hds/form/header/description")
        SectionMultiFieldGroup=(component "hds/form/section/multi-field-group")
        Separator=(component "hds/form/separator")
        ButtonSet=(component "hds/button-set")
      )
    }}
  </div>
{{/if}}