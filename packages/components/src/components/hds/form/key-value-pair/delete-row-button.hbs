{{#if @canDeleteRow}}
  <span class="hds-form-key-value-pair__row-delete-button-container">
    <Hds::Button
      @text={{this.text}}
      @icon="trash"
      @isIconOnly={{true}}
      @color="secondary"
      @size="medium"
      class="hds-form-key-value-pair__delete-row-button"
      {{on "click" this.onClick}}
      ...attributes
    />
  </span>
{{/if}}