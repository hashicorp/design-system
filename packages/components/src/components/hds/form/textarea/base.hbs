{{! Notice: this is not the native HTML <textarea> but the Ember component <Textarea> }}
<Textarea
  class={{this.classNames}}
  {{style width=@width height=@height}}
  rows="4"
  id={{@id}}
  aria-describedby={{@ariaDescribedBy}}
  ...attributes
  @value={{@value}}
/>