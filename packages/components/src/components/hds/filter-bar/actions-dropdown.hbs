<Hds::Dropdown
  @listPosition="bottom-right"
  @enableCollisionDetection={{@enableCollisionDetection}}
  @width={{@width}}
  @height={{@height}}
  @preserveContentInDom={{@preserveContentInDom}}
  @onClose={{@onClose}}
  @onFocusOut={{@onFocusOut}}
  class="hds-filter-bar__actions-dropdown"
  ...attributes
  as |D|
>
  <D.ToggleButton @icon={{@toggleButtonIcon}} @text={{this.toggleButtonText}} @color="secondary" @size="small" />
  {{yield D}}
</Hds::Dropdown>