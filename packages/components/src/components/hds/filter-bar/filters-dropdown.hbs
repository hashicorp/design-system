{{! @glint-nocheck }}
<Hds::Dropdown
  @listPosition="bottom-left"
  @height="180px"
  class={{this.classNames}}
  {{this._updateInternalFilterableColumns}}
  as |D|
>
  <D.ToggleButton @text="Add filter" @color="secondary" @size="small" />
  {{yield
    (hash
      Checkbox=(component
        "hds/filter-bar/filters-checkbox"
        checkbox=D.Checkbox
        activeFilterableColumns=this.internalFilterableColumns
        onChange=this.onChange
      )
    )
  }}
  <D.Footer @hasDivider={{true}}>
    <Hds::ButtonSet>
      <Hds::Button @text="Apply" @isFullWidth={{true}} @size="small" {{on "click" (fn this.onApply D.close)}} />
      <Hds::Button @text="Clear" @color="secondary" @size="small" {{on "click" (fn this.onClear D.close)}} />
    </Hds::ButtonSet>
  </D.Footer>
</Hds::Dropdown>