<Hds::Dropdown
  @listPosition="bottom-left"
  @height="600px"
  @width="600px"
  @onClose={{this._onClose}}
  class="hds-filter-bar__dropdown"
  {{this._syncFilters @filters}}
  as |D|
>
  <D.ToggleButton
    @icon="filter"
    @text={{hds-t "hds.components.filter-bar.dropdown.toggle-button" default="Filters"}}
    @color="secondary"
    @size="small"
  />
  <D.Generic>
    <Hds::FilterBar::Tabs
      @ariaLabel={{hds-t "hds.components.filter-bar.dropdown.tabs.aria-label" default="Filter bar tabs"}}
      as |T|
    >
      {{yield
        (hash
          FilterGroup=(component
            "hds/filter-bar/filter-group" tab=T.Tab panel=T.Panel onChange=this.onFilter filters=this.internalFilters
          )
          close=D.close
        )
      }}
    </Hds::FilterBar::Tabs>
  </D.Generic>
  <D.Footer @hasDivider={{true}}>
    <Hds::ButtonSet>
      {{#unless this.isLiveFilter}}
        <Hds::Button
          @text={{hds-t "hds.components.filter-bar.dropdown.apply" default="Apply filters"}}
          @size="small"
          {{on "click" (fn this.onApply D.close)}}
        />
      {{/unless}}
      <Hds::Button
        @text={{hds-t "hds.components.filter-bar.dropdown.clear" default="Clear all filters"}}
        @color="secondary"
        @size="small"
        {{on "click" (fn this.onClear D.close)}}
      />
    </Hds::ButtonSet>
  </D.Footer>
</Hds::Dropdown>