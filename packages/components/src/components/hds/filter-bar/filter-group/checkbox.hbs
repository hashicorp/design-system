<li class="hds-filter-bar__filter-group__checkbox hds-filter-bar__filter-group__selection-option" ...attributes>
  <label class="hds-filter-bar__filter-group__selection-option__label hds-typography-body-200" for={{this._elementId}}>
    <Hds::Form::Checkbox::Base
      class="hds-filter-bar__filter-group__selection-option__control"
      id={{this._elementId}}
      checked={{this.isChecked}}
      @value={{@value}}
      {{on "change" this.onChange}}
    />
    <Hds::Text::Body
      @tag="span"
      @size="200"
      @weight="medium"
      class="hds-filter-bar__filter-group__selection-option__text-content"
    >{{@label}}</Hds::Text::Body>
  </label>
</li>