{{#let @tab as |Tab|}}
  <Tab @numFilters={{this.numFilters}}>
    {{@text}}
  </Tab>
{{/let}}
{{#let @panel as |Panel|}}
  <Panel {{this._setUpFilterPanel}}>
    {{#if @searchEnabled}}
      <div class="hds-filter-bar__filters-dropdown__filter-group__search">
        <Hds::Form::TextInput::Base
          @type="search"
          placeholder={{hds-t "components.filter-bar.filter-group.search-input-placeholder" default="Search"}}
          {{on "input" this.onSearch}}
        />
      </div>
    {{/if}}
    {{#if (eq @type "range")}}
      <Hds::FilterBar::Range @keyFilter={{this.keyFilter}} @onChange={{this.onRangeChange}} />
    {{else if (eq @type "date")}}
      <Hds::FilterBar::Date @keyFilter={{this.keyFilter}} @onChange={{this.onDateChange}} @type="date" />
    {{else if (eq @type "datetime")}}
      <Hds::FilterBar::Date @keyFilter={{this.keyFilter}} @onChange={{this.onDateChange}} @type="datetime" />
    {{else if (eq @type "time")}}
      <Hds::FilterBar::Date @keyFilter={{this.keyFilter}} @onChange={{this.onDateChange}} @type="time" />
    {{else}}
      <div class="hds-filter-bar__filters-dropdown__filter-group__values-list">
        <div class="hds-filter-bar__filters-dropdown__clear">
          <Hds::Button
            @text={{hds-t "hds.components.filter-bar.filter-group.clear" default="Clear selection"}}
            @color="tertiary"
            @icon="rotate-ccw"
            {{on "click" this.onClear}}
          />
        </div>
        <ul class="hds-filter-bar__filters-dropdown__filter-group__list">
          {{yield
            (hash
              Checkbox=(component "hds/filter-bar/checkbox" keyFilter=this.keyFilter onChange=this.onSelectionChange)
              Radio=(component "hds/filter-bar/radio" keyFilter=this.keyFilter onChange=this.onSelectionChange)
            )
          }}
        </ul>
      </div>
    {{/if}}
  </Panel>
{{/let}}