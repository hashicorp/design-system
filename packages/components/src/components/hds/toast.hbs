<Hds::Alert
  class="hds-toast"
  @type="inline"
  @color={{@color}}
  @icon={{@icon}}
  @onDismiss={{@onDismiss}}
  role="alert"
  aria-live="polite"
  ...attributes
  as |A|
>
  {{yield
    (hash Title=A.Title Description=A.Description Button=A.Button LinkStandalone=A.LinkStandalone Generic=A.Generic)
  }}
</Hds::Alert>