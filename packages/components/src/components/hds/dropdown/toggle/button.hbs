<button
  class={{this.classNames}}
  id={{this.toggleButtonId}}
  ...attributes
  type="button"
  aria-expanded={{if @isOpen "true" "false"}}
  {{@setupPrimitiveToggle}}
>
  {{#if @icon}}
    <div class="hds-dropdown-toggle-button__icon">
      <Hds::Icon @name={{@icon}} @stretched={{true}} />
    </div>
  {{/if}}
  <div class="hds-dropdown-toggle-button__text">
    {{this.text}}
  </div>
  {{#if @count}}
    <Hds::BadgeCount
      @text={{@count}}
      @size="small"
      @type={{this.badgeType}}
      class="hds-dropdown-toggle-button__count"
    />
  {{/if}}
  {{#if @badge}}
    <Hds::Badge
      @text={{@badge}}
      @icon={{@badgeIcon}}
      @size="small"
      @type={{this.badgeType}}
      class="hds-dropdown-toggle-button__badge"
    />
  {{/if}}
  <Hds::Dropdown::Toggle::Chevron />
</button>