{
  "color": {
    "vagrant": {
      "brand": {
        "$type": "color",
        "$value": "{color.palette.vagrant-brand}",
        "group": "branding"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.palette.vagrant-500}",
        "group": "branding"
      },
      "surface": {
        "$type": "color",
        "$value": "{color.palette.vagrant-50}",
        "group": "branding"
      },
      "border": {
        "$type": "color",
        "$value": "{color.palette.vagrant-100}",
        "group": "branding"
      },
      "gradient": {
        "primary": {
          "start": {
            "$type": "color",
            "$value": "{color.palette.vagrant-300}",
            "group": "branding"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.vagrant-400}",
            "group": "branding"
          }
        },
        "faint": {
          "start": {
            "$type": "color",
            "$value": "#f4faff",
            "group": "branding",
            "comment": "this is the 'vagrant-50' value at 25% opacity on white"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.vagrant-50}",
            "group": "branding"
          }
        }
      }
    }
  }
}