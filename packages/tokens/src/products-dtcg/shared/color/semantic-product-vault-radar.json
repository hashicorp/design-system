{
  "color": {
    "vault-radar": {
      "brand": {
        "$type": "color",
        "$value": "{color.palette.vault-radar-brand}",
        "group": "branding"
      },
      "brand-alt": {
        "$type": "color",
        "$value": "#000",
        "group": "branding",
        "comment": "this is a special “alternative” color, used as an exception in some contexts where the normal “brand” color for Vault radar would not work"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.palette.vault-radar-500}",
        "group": "branding"
      },
      "surface": {
        "$type": "color",
        "$value": "{color.palette.vault-radar-50}",
        "group": "branding"
      },
      "border": {
        "$type": "color",
        "$value": "{color.palette.vault-radar-100}",
        "group": "branding"
      },
      "gradient": {
        "primary": {
          "start": {
            "$type": "color",
            "$value": "{color.palette.vault-radar-100}",
            "group": "branding"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.vault-radar-200}",
            "group": "branding"
          }
        },
        "faint": {
          "start": {
            "$type": "color",
            "$value": "#fffdf2",
            "group": "branding",
            "comment": "this is the 'vault-radar-50' value at 25% opacity on white"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.vault-radar-50}",
            "group": "branding"
          }
        }
      }
    }
  }
}