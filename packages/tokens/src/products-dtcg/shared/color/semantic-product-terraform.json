{
  "color": {
    "terraform": {
      "brand": {
        "$type": "color",
        "$value": "{color.palette.terraform-brand}",
        "group": "branding"
      },
      "brand-on-dark": {
        "$type": "color",
        "$value": "#a067da",
        "group": "branding",
        "comment": "this is an alternative brand color meant to be used on dark backgrounds"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.palette.terraform-500}",
        "group": "branding"
      },
      "surface": {
        "$type": "color",
        "$value": "{color.palette.terraform-50}",
        "group": "branding"
      },
      "border": {
        "$type": "color",
        "$value": "{color.palette.terraform-100}",
        "group": "branding"
      },
      "gradient": {
        "primary": {
          "start": {
            "$type": "color",
            "$value": "{color.palette.terraform-300}",
            "group": "branding"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.terraform-400}",
            "group": "branding"
          }
        },
        "faint": {
          "start": {
            "$type": "color",
            "$value": "#fcfaff",
            "group": "branding",
            "comment": "this is the 'terraform-50' value at 25% opacity on white"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.terraform-50}",
            "group": "branding"
          }
        }
      }
    }
  }
}