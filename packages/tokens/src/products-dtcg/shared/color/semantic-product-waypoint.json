{
  "color": {
    "waypoint": {
      "brand": {
        "$type": "color",
        "$value": "{color.palette.waypoint-brand}",
        "group": "branding"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.palette.waypoint-500}",
        "group": "branding"
      },
      "surface": {
        "$type": "color",
        "$value": "{color.palette.waypoint-50}",
        "group": "branding"
      },
      "border": {
        "$type": "color",
        "$value": "{color.palette.waypoint-100}",
        "group": "branding"
      },
      "gradient": {
        "primary": {
          "start": {
            "$type": "color",
            "$value": "{color.palette.waypoint-100}",
            "group": "branding"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.waypoint-200}",
            "group": "branding"
          }
        },
        "faint": {
          "start": {
            "$type": "color",
            "$value": "#f6feff",
            "group": "branding",
            "comment": "this is the 'waypoint-50' value at 25% opacity on white"
          },
          "stop": {
            "$type": "color",
            "$value": "{color.palette.waypoint-50}",
            "group": "branding"
          }
        }
      }
    }
  }
}