<button 
  class="hds-button {{this.sizeClass}} {{this.colorClass}} {{if this.isFullWidth "hds-button__width-full"}}"
  ...attributes
  aria-label={{if this.isIconOnly @text null}} 
  type={{this.type}}
  disabled={{if this.isDisabled "disabled" null}}
>
  {{#if this.isIconOnly}}
    <div class="hds-button__icon">
      <FlightIcon @name={{this.icon}} @size={{this.iconSize}} />
    </div>
  {{else}}
    {{#if this.icon}}
      {{#if (eq this.iconPos "leading")}}
        <div class="hds-button__icon">
          <FlightIcon @name={{this.icon}} @size={{this.iconSize}} />
        </div>
        <div class="hds-button__text">
          {{@text}}
        </div> 
      {{else}}
        <div class="hds-button__text">
          {{@text}}
        </div>
        <div class="hds-button__icon">
          <FlightIcon @name={{this.icon}} @size={{this.iconSize}} />
        </div>
      {{/if}}
    {{else}}
      <div class="hds-button__text">
          {{@text}}
      </div>
    {{/if}}
  {{/if}}

</button>