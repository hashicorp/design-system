<div class="hds-badge {{this.colorClass}} {{this.typeClass}} {{this.sizeClass}}" ...attributes >
  {{#if @icon}}
    <div class="hds-badge__icon">
      {{!-- placeholder while we wait for https://github.com/hashicorp/flight/pull/328 --}}
      <FlightIcon @name={{this.icon}} @size="16" />
    </div>
  {{/if}}
  {{#if @text}}
    <div class="hds-badge__text">
      {{@text}}
    </div>
  {{else}}
    <span class="sr-only">{{@srOnlyText}}</span>
  {{/if}}
</div>